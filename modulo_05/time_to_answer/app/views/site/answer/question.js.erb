ePanel = document.getElementById("panel_<%= @answer.question_id %>")
element = document.getElementById("submit_<%= @answer.question_id %>")
result = document.getElementById("result_<%= @answer.question_id %>")

ePanel.classList.remove('panel-default')
ePanel.classList.remove('panel-danger')
ePanel.classList.remove('panel-success')

element.classList.remove('btn-default')
element.classList.remove('btn-danger')
element.classList.remove('btn-success')

if(<%= @answer.correct %>){
  ePanel.classList.add('panel-success')
  element.classList.add('btn-success')
  result.innerHTML = "Você acertou ^-^";
}else{
  ePanel.classList.add('panel-danger')
  element.classList.add('btn-danger')
  result.innerHTML = "Você errou tente novamente :(";
}