<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">Listando os assuntos</h1>
  </div>
</div>


<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <th>id</th>
      <th> <%= translate_attributes(@subjects, :description) %> </th>
      <th>
        <%= link_to new_admins_backoffice_subject_path, class:"btn btn-success btn-circle"  do %>
          <i class="fa fa-plus"></i>
        <% end %>
      </th>
    </thead>
    <tbody>
        <% @subjects.each do |subject| %>
        <tr>
          <td> <%= subject.id %> </td>
          <td> <%= subject.description %> </td>
          <td>
            <%= link_to edit_admins_backoffice_subject_path(subject), class:"btn btn-primary btn-circle"  do %>
              <i class="fa fa-pencil"></i>
            <% end %>
            <%= link_to admins_backoffice_subject_path(subject), method: :delete, class:"btn btn-danger btn-circle", data: {confirm: "Deseja excluir?"}  do %>
              <i class="fa fa-trash-o"></i>
            <% end %>
          </td>
        <% end %>
      </tr>
    </tbody>
  </table>

  <div class="text-center">
    <%= paginate @subjects %>
  </div>

</div>